              <h1
                class="mb-4 mt-2 font-semibold text-white dark:text-gray-200"
              >
                An OTP has been sent to your email
              </h1>

              <% if (message) { %>
                <div class="alert alert-dismissible fade show alert" role="alert">
                  <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                  <strong>
                    <%= message.message %>
                  </strong>
                </div>
                <% } %>

              <label class="block text-sm">
                <span class="text-gray-700 dark:text-gray-400"></span>
                <form action="/verifyOTP" method="post">
                <input type="tel"
                  class="mt-1 text-center text-sm  text-black  focus:border-purple-400 focus:outline-none focus:shadow-outline-purple   form-input"
                  placeholder="Enter Your OTP" name="otp" required
                />
              </label>

              <!-- You should use a button here, as the anchor is only used for the example  -->
              <div class="justify-content-center">
              <button type="submit"
                class="block mx-auto mt-3 mb-2 px-4 py-2 mt-4 text-sm  leading-5 text-center text-gray-200 transition-colors duration-150 bg-purple-600 border border-transparent rounded-lg active:bg-purple-200 hover:bg-purple-700 focus:outline-none focus:shadow-outline-purple"
                
              >
                SUBMIT OTP
              
            </button>
