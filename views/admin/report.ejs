                <div class="col-12 col-md-6 mx-3 bg-light p-1 text-dark">
                    <form action="/admin/report/sales" method="post" id="reportForm">
                      <div class="mb-1">
                        <label for="" class=" text-dark">Report</label>
                        <div class="input-group mb-3">
                          <span class="input-group-text" id="basic-addon1"><i class="bi bi-clipboard-data"></i></span>
            
                          <select name="" id="report" class="form-control" onchange="changeAction()">
